amazon-linux-extras install java-openjdk11 -y

wget https://dlcdn.apache.org/tomcat/tomcat-10/v10.1.34/bin/apache-tomcat-10.1.34.tar.gz
tar -zxvf apache-tomcat-10.1.34.tar.gz

# Modify tomcat-users.xml to add admin roles and user
sed -i '56 a\<role rolename="manager-gui"/>' apache-tomcat-10.1.34/conf/tomcat-users.xml
sed -i '57 a\<role rolename="manager-script"/>' apache-tomcat-10.1.34/conf/tomcat-users.xml
sed -i '58 a\<user username="tomcat" password="root123456" roles="manager-gui, manager-script"/>' apache-tomcat-10.1.34/conf/tomcat-users.xml
sed -i '59 a\</tomcat-users>' apache-tomcat-10.1.34/conf/tomcat-users.xml

# Remove restrictive access from the webapps/manager context files
sed -i '56d' apache-tomcat-10.1.34/conf/tomcat-users.xml
sed -i '21d' apache-tomcat-10.1.34/webapps/manager/META-INF/context.xml
sed -i '22d' apache-tomcat-10.1.34/webapps/manager/META-INF/context.xml

# Start Tomcat
sh apache-tomcat-10.1.34/bin/startup.sh
